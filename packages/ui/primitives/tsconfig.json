{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    // ShadCN does this in a few places
    "noUnusedParameters": false,
    // Necessary for `shadcn-ui` to emit files in the right location; otherwise, we don't rely on these.
    // (We use package.json exports throughout our monorepo, instead.)
    "paths": {
      "@scratch/ui.primitives/*": ["./src/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
